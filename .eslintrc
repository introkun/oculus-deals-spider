{
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-var": "error",
    "semi": 0,
    "indent": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error",
    "no-unused-vars": 2,
    "no-undef": 2
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  }
}